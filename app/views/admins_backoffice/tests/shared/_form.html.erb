<h1><%= action_message %></h1>

<div class="row">

  <% if @test.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        <ul>
          <% @test.errors.full_messages.each do |message|%>
             <li> <%= message %> </li>
          <% end%>
         
        </ul>
      </button>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
       
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">


            <%= form_with(model: [ :admins_backoffice, @test], local: true) do |form| %>

              <%= %>
              <div class="form-group">
                <%= form.label :name, "Nome da Avaliação"%>
                <%= form.text_field :name, class:"form-control" %>
          
              </div>

              <div class="form-group">
              
                <%= form.label :subject,  "Assunto" %> </br>
                <%= form.collection_select(:subject_id, @subjects, :id, :description,{} ) %>
            
              </div> 

            
              <%= form.submit "Salvar", class:"btn btn-primary", id:"btn"%>
              <%= link_to admins_backoffice_tests_path, class:"btn btn-light" do %>
                  Voltar para Avaliações
              <% end %>
              
              
        
           <% end %>
           
          </div>
          <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
        
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <hr>
  </div>
  <!-- /.col-lg-12 -->
</div>

